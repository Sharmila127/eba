</div>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Select all parent menu items (Including Institutes)
    document.querySelectorAll('li > a[data-category]').forEach(link => {
        link.addEventListener("click", (e) => {
            e.preventDefault();
            
            let nestedList = link.nextElementSibling;
            
            // Toggle only if there's a submenu (nested list)
            if (nestedList && nestedList.tagName === "UL") {
                nestedList.style.display = nestedList.style.display === "block" ? "none" : "block";
            }
        });
    });

    // Filtering logic (Ensure it doesn't interfere with toggling)
    document.querySelectorAll(".submenu-item > a").forEach(link => {
        link.addEventListener("click", (e) => {
            e.preventDefault();
            let category = link.getAttribute("data-category");
            if (typeof filterByCategory === "function") {
                filterByCategory(category);
            }
        });
    });

    document.querySelectorAll(".nested-list li a").forEach(nestedLink => {
        nestedLink.addEventListener("click", (e) => {
            e.preventDefault();
            let subcategory = nestedLink.getAttribute("data-category");
            if (typeof filterBySubcategory === "function") {
                filterBySubcategory(subcategory);
            }
        });
    });
});

document.addEventListener("DOMContentLoaded", function () {
    // Get current page URL
    const currentPath = window.location.pathname;
    
    // Select the buttons
    const editBtn = document.getElementById("editBtn");
    const saveBtn = document.getElementById("saveBtn");

    // Hide buttons if the user is on /api_doc
    if (currentPath === "/api_doc") {
        if (editBtn) editBtn.style.display = "none";
        if (saveBtn) saveBtn.style.display = "none";
    }
});

function enableEdit() {
    let nameField = document.getElementById("nameField");
    let methodField = document.getElementById("methodField");
    let routeField = document.getElementById("routeField");

    if (!nameField || !methodField || !routeField) {
        console.error("❌ One or more fields not found!");
        return;
    }

    document.getElementById("editBtn").style.display = "none";
    document.getElementById("saveBtn").style.display = "inline-block";

    nameField.contentEditable = true;
    methodField.contentEditable = true;
    routeField.contentEditable = true;

    nameField.style.border = "1px solid #ccc";
    methodField.style.border = "1px solid #ccc";
    routeField.style.border = "1px solid #ccc";
}


function saveChanges(id) {
    let nameField = document.getElementById("nameField");
    let methodField = document.getElementById("methodField");
    let routeField = document.getElementById("routeField");

    if (!nameField || !methodField || !routeField) {
        console.error("❌ One or more fields not found!");
        return;
    }

    const updatedData = {
        name: nameField.innerText,
        method: methodField.innerText,
        route: routeField.innerText
    };

    fetch(`/api_edit/update-endpoint/1`, {
        method: 'PUT',
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(updatedData)
    })
    .then(response => {
        if (!response.ok) throw new Error(`HTTP error! Status: ${response.status}`);
        return response.json();
    })
    .then(data => {
        alert("✅ Updated successfully!");

        document.getElementById("editBtn").style.display = "inline-block";
        document.getElementById("saveBtn").style.display = "none";

        nameField.contentEditable = false;
        methodField.contentEditable = false;
        routeField.contentEditable = false;

        nameField.style.border = "none";
        methodField.style.border = "none";
        routeField.style.border = "none";
    })
    .catch(error => {
        console.error("❌ Error updating:", error);
        alert("❌ Update failed! Check console for details.");
    });
}


 function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(() => {
      alert("Copied to clipboard!");
    }).catch(err => {
      console.error("Error copying text: ", err);
    });
  }

// Function to filter by category (submenu)
function filterByCategory(category) {
    document.querySelectorAll('.endpoint').forEach(endpoint => {
        let endpointCategory = endpoint.querySelector('p strong')?.textContent.toLowerCase().trim();

        if (endpointCategory && endpointCategory.includes(category.toLowerCase())) {
            endpoint.style.display = 'block';
        } else {
            endpoint.style.display = 'none';
        }
    });
}

//  Function to filter by subcategory (nested list)
function filterBySubcategory(subcategory) {
    document.querySelectorAll('.endpoint').forEach(endpoint => {
        let endpointSubcategory = endpoint.querySelector('.search-val')?.textContent.toLowerCase().trim();

        if (endpointSubcategory && endpointSubcategory.includes(subcategory.toLowerCase())) {
            endpoint.style.display = 'block';
        } else {
            endpoint.style.display = 'none';
        }
    });
}

//  Function to filter endpoints based on the third word in the API name
function filterByThirdWord(thirdWord) {
    document.querySelectorAll('.endpoint').forEach(endpoint => {
        let endpointName = endpoint.querySelector('h3 strong')?.textContent.toLowerCase().trim();

        if (endpointName) {
            let nameParts = endpointName.split(' '); // Split API name into words
            let thirdName = nameParts.length >= 3 ? nameParts[2] : ''; // Get third word

            if (thirdName && thirdName.includes(thirdWord.toLowerCase())) {
                endpoint.style.display = 'block';
            } else {
                endpoint.style.display = 'none';
            }
        }
    });
}

// ✅ Example usage (call this function when needed, passing the third word to filter)
function applyThirdWordFilter() {
    let thirdWord = prompt("Enter third word to filter:");
    if (thirdWord) {
        filterByThirdWord(thirdWord);
    }
}

function showOverview() {
    document.getElementById('overview-section').style.display = 'block';
        document.getElementById('api-image').style.display = 'none';
    document.querySelectorAll('.endpoint, .sidebar-content').forEach(el => el.style.display = 'none');
    document.getElementById('searchInput').style.display = 'none';
  }
  function showAllEndpoints() {
    document.getElementById('overview-section').style.display = 'block';
    document.getElementById('api-image').style.display = 'block';
    document.querySelectorAll('.endpoint').forEach(el => el.style.display = 'block');
    document.querySelectorAll('.sidebar-content').forEach(el => el.style.display = 'block');
    const searchBox = document.getElementById('searchInput');
    searchBox.style.display = 'block';
    searchBox.value = '';
    filterEndpoints();


  }

  function filterEndpoints() {
    const searchInput = document.getElementById('searchInput').value.toLowerCase().trim();
    document.querySelectorAll('.endpoint').forEach(endpoint => {
      let searchText = '';

      const nameElement = endpoint.querySelector('h3 strong');
      if (nameElement) searchText += nameElement.textContent.toLowerCase() + ' ';
      
      const methodElement = endpoint.querySelector('.endpointDetails span strong');
      if (methodElement) searchText += methodElement.textContent.toLowerCase() + ' ';

      const textElements = endpoint.querySelectorAll('p, code');
      textElements.forEach(element => {
        searchText += element.textContent.toLowerCase() + ' ';
      });

      endpoint.style.display = searchText.includes(searchInput) ? 'block' : 'none';
    });

    // Show all endpoints if search is empty
    if (searchInput === '') {
      document.querySelectorAll('.endpoint').forEach(endpoint => {
        endpoint.style.display = 'block';
      });
    }
  }




</script>

