<!-- views/MockEmail.Views.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mock Email Data</title>
    <style>
        .title{
            display: flex;
            justify-content: center;
        }
    </style>
</head>


<body>
    <h1 class="title">Mock mail Data</h1>
    <ul>
        {{#each data}}
        <div>
        
            <div id="content-{{@index}}" style=""></div>
            <script>
               document.getElementById("content-{{@index}}").innerHTML = `
               <div style="background: #f4f7ff; 
                background-image: url(https://eflow-backend-19sg.onrender.com/staticfiles/eflow/66302be4-e951-40cb-9e96-0b893beccb08.jpg);
                background-repeat: no-repeat; background-size: 800px 452px; 
                background-position: top center; font-size: 14px; 
                color: #434343;">
                <strong style ="display:flex;  justify-content:center; font-size:40px; margin-top: 30px;">{{{this.to}}}</strong>
                <p style ="display:flex;  justify-content:center; font-size:20px; ">{{{this.subject}}}</p>
               {{{this.html}}}
               </div>
               `
            </script>
        </div>
        {{/each}}
    </ul>
</body>

</html>